/* pages/mine/index.wxss */

.mine {
    color: #222;
    font-size: 28rpx;
    background: #fff;
}

.mine-top {
    background: #fff;
    margin-bottom: 20rpx;
}

.userinfo {
    padding: 0 0 92rpx 0;
    text-align: center;
}

.userinfo>.username {
    color: #333;
    height: 40rpx;
    line-height: 40rpx;
    margin-top: 28rpx;
    font-size: 32rpx;
}

.userinfo>.userinfo-image {
    height: 160rpx;
    background: #fff;
    width: 160rpx;
    text-align: center;
    padding: 0;
    border-radius: 50%;
    box-shadow: 0 6rpx 10rpx rgba(0, 0, 0, 0.3);
}
.mine-tabs {
    display: flex;
    justify-content: space-around;
    height: 150rpx;
    background: #fff;
    border-bottom: 20rpx solid #f6f6f6;
    align-items: center;
}

.mine-tabs>view>image {
    width: 52rpx;
    height: 42rpx;
    display: block;
    margin: 0 auto;
    padding-bottom: 16rpx;
}

.mine-columns {
    padding: 0 24rpx;
    background: #fff;
}

.mine-columns-item{
    display: flex;
    justify-content: space-between;
    height: 100rpx;
    line-height: 100rpx;
    color: #222;
    font-size: 28rpx;
    padding: 0;
    border-bottom: 1px solid #f6f6f6;
}

.mine-columns-item>image {
    width: 15rpx;
    height: 26rpx;
    margin-top: 37rpx;
}

.mine-columns-item>view>image {
    width: 44rpx;
    height: 44rpx;
    vertical-align: middle;
    padding-right: 32rpx;
}
.mine-footer{
   border-top: 20rpx solid #f6f6f6;
   padding: 0 24rpx;
   background: #fff; 
}
.contact_us {
    text-align: center;
    color: #999;
    font-size: 24rpx;
    height: 100rpx;
    line-height: 100rpx;
    width: 100%;
    background: #f5f5f5;
}

