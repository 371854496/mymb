/* pages/mine/about/index.wxss */
.about{
    font-size: 30rpx;
    color:#222;
}
.about-header{
    height: 500rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}
.about-header>image{
    width: 215rpx;
    height: 215rpx;
    border-radius: 50%;
    margin-bottom: 40rpx;
}
.about-column{
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 100rpx;
    font-size: 28rpx;
    margin: 0 40rpx;
    border-bottom: 1px solid #eaeaea;
}
.about-column>view>image{
    width: 48rpx;
    height: 48rpx;
    vertical-align: middle;
    padding-right: 30rpx;
}
.about-column>image{
    width: 15rpx;
    height: 26rpx;
}