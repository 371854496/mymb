/* pages/mine/onlineBuy/index.wxss */
.onlineBuy{
    padding: 100rpx 20rpx 0 20rpx;
    font-size: 30rpx;
    color:#222;
}
.original-price>view:first-of-type{
    line-height: 30rpx;
    padding-bottom: 30rpx;
}
.original-price>view:last-of-type{
    border-bottom: 1px solid #e2e2e2;
    padding-bottom: 30rpx;
    display: flex;
    align-items: baseline;
}
.original-price>view:last-of-type>text{
    font-size: 56rpx;
    line-height: 56rpx;
}
.original-price>view:last-of-type>input{
    font-size: 88rpx;
    height: 88rpx;
    line-height: 88rpx;
    color:#222; 
}
.card{
    padding: 50rpx 0;
    display: flex;
    justify-content: space-between;
    border-bottom: 1px solid #e2e2e2;
}
.card>text{
    line-height: 30rpx;
}
.card>view>image{
    width:15rpx;
    height: 26rpx;
    padding-right: 30rpx;
    padding-left: 10rpx;
}
.card__active{
    color:#f33497;
}
.card__default{
    color:#999;
}
.reality-price{
    padding: 60rpx 0;
}
.reality-price>view:first-of-type{
    line-height: 30rpx;
    padding-bottom: 70rpx;
}
.reality-price>view:last-of-type{
    padding-bottom: 30rpx;
    color:#c0c0c0; 
}
.reality-price>view:last-of-type>text:first-of-type{
    font-size: 56rpx;
    line-height: 56rpx;
    vertical-align: baseline;
}
.reality-price>view:last-of-type>text:last-of-type{
    font-size: 88rpx;
    line-height: 88rpx;
    vertical-align: baseline;
}
.buyBtn{
    background: rgba(243,52,151,0.5);
    height: 100rpx;
    text-align: center;
    line-height: 100rpx;
    border-radius: 8rpx;
    font-size: 32rpx;
    color:rgba(255,254,254,0.5);
}
.reality-price_active{
    color:#f33497;
}
.buyBtn_active{
   background:#f33497;
   color:#fffefe; 
}