/* pages/mine/member/detail/index.wxss */
.detail{
    background: #f6f6f6;
    position: fixed;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    color:#222;
    font-size: 28rpx;
    padding-top: 40rpx;
}
.detail-header-image{
    position: relative;
    width: 640rpx;
    height: 400rpx;
}
.detail-header-image>image{
    width: 640rpx;
	height: 400rpx;  
}
.detail-header-image>text{
    position: absolute;
    left: 40rpx;
    bottom: 20rpx;
    color: #fff;
    font-size: 24rpx;
}
.detail-header-btn{
    width: 320rpx;
	height: 60rpx;
	border-radius: 8rpx;
	border: 1px solid #f33497;
    text-align: center;
    line-height: 60rpx;
    margin: 100rpx auto;
    color:#f33497;
    font-size: 32rpx;
}
.detail-content{
    background: #fff;
    width:100%;
}
.detail-content>view{
    width: 640rpx;
    line-height: 100rpx;
    margin:0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-bottom: 1px solid #eaeaea;
}
.detail-content>view>image{
    width: 15rpx;
    height: 26rpx;
}