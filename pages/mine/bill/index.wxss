/* pages/mine/bill/index.wxss */

.bill {
    background: #f6f6f6;
    font-size: 30rpx;
    color: #222;
}

.bill-header {
    height: 112rpx;
    text-align: center;
    position: fixed;
    width: 100%;
    top: 0;
    z-index: 1000;
    background: #fff;
}

.bill-header-date {
    line-height: 30rpx;
    padding: 20rpx 0;
}

.bill-header-date-info>image {
    width: 21rpx;
    height: 12rpx;
    vertical-align: middle;
    padding-left: 15rpx;
}

.bill-header-price {
    color: #999;
    font-size: 28rpx;
    line-height: 28rpx;
}

.bill-content {
    background: #fff;
    padding-top: 112rpx;
}

.bill-content-info {
    height: 144rpx;
    display: flex;
    align-items: center;
}

.bill-content-info>image {
    width: 76rpx;
    height: 76rpx;
    border-radius: 50%;
    margin: 0 26rpx 0 32rpx;
}

.bill-content-info>view {
    display: flex;
    width: calc(100% - 134rpx);
    height: 100%;
    align-items: center;
    justify-content: space-between;
    border-bottom: 1px solid #eaeaea;
}

.bill-content-info>view>view:first-of-type>view:last-of-type {
    font-size: 24rpx;
    color: #999;
}

.bill-content-info>view>view:last-of-type {
    font-size: 32rpx;
    padding-right: 40rpx;
}
