/*card-list*/
.list{
    display: flex;
    flex-direction: column;
    align-items: center;
    font-size: 24rpx;
    color:#222;
    width: 670rpx;
    height: 100%;
    margin-left: 40rpx;
    padding-top:40rpx;
}
.list-item{
    width: 100%;
    display: flex;
    margin-bottom: 40rpx;
    box-shadow: 0 6rpx 8rpx 0 #f3f3f3;
}
.list-item-left{
    width: 220rpx;
    height: 180rpx;
    padding: 20rpx;
    color:#fff;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-around;
    position: relative;
    box-shadow:0 2px 4px 0 rgba(0,0,0,0.3);

}
.list-item-left>view:first-of-type{
    font-size: 26rpx; 
}
.list-item-left>view:nth-of-type(2)>text:first-of-type{
    font-size: 40rpx;
}
.list-item-left>view:nth-of-type(2)>text:last-of-type{
    font-size: 60rpx;
}
.list-item-left>image{
    width: 10rpx;
    height: 195rpx;
    position: absolute;
    right: 0;
    top: 12rpx;
}
.list-item-right{
    width: calc(100% - 220rpx);
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: center;
    font-size: 26rpx;
    background: #fff;
    box-shadow:0 2px 4px 0 rgba(0,0,0,0.3);

}
.list-item-right>view:first-of-type{
    font-size: 36rpx;
}
.list-item-right>view:last-of-type{
    color:#c2c2c4;
    font-size: 24rpx;
}
