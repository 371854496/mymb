/* pages/sales/welfare/detail/index.wxss */
.detail{
    position: fixed;
    height: 100%;
    width: 100%;
    background: #de4242;
}
.detail>image{
    width: 100%;
    height: 1000rpx;
}
.detail-content{
    display: flex;
    flex-direction: column;
    align-items: center;
    font-size: 38rpx;
}
.detail-content>view:first-of-type{  
    color:#fff;
    padding-bottom: 20rpx;
}
.detail-content>view:last-of-type{
    width:540rpx;
    height: 80rpx;
    text-align: center;
    line-height: 80rpx;
    color:#222;
    background-image: linear-gradient(0deg, 
		#efb427 0%, 
		#fdfc35 100%), 
	linear-gradient(
		#f9db36, 
		#f9db36);
    box-shadow: 0rpx 4rpx 20rpx 0rpx 
		rgba(186, 42, 200, 0.36);
	border-radius: 12rpx;
}
.commodity-screen {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    opacity: 0.5;
    overflow: hidden;
    z-index: 1000;
    color: #fff;
}
/*弹框 */
.commodity-box {
    position: fixed;
    top: 50%;
    left: 50%;
    z-index: 2000;
    transform: translate(-50%,-50%);
    color:#222;  
}
.commodity-box-get>view{
    width: 608rpx;
    height: 744rpx;
    position: relative;
}
.commodity-box-get>image{
    width: 58rpx;
    height: 58rpx;
    margin:20rpx auto 0 auto;
    display:block;
}
.commodity-box-get>view>image{
    width: 608rpx;
    height: 744rpx;  
}
.commodity-box-get>view>view{
    position: absolute;
    bottom: 40rpx;
    left: 0;
    width: 100%;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    color:#fff;
}
.commodity-box-get>view>view>view:first-of-type{
    font-size: 40rpx;
    padding-bottom:30rpx;

}
.commodity-box-get>view>view>view:nth-of-type(2){
    font-size: 30rpx;
    padding-bottom:50rpx;
}
.commodity-box-get>view>view>button>image{
    width: 316rpx;
    height:100rpx;
}
