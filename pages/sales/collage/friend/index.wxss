/* pages/sales/collage/friend/index.wxss */
.friend{
    color:#222;
    background: #f6f6f6;
}
.friend-item{
    display: flex;
    align-items: center;
    height: 224rpx;
    background: #fff;
    margin-bottom: 20rpx;
}
.friend-item>image{
    width: 154rpx;
	height: 154rpx;
    margin-left:50rpx;
    margin-right: 36rpx; 
}
.friend-item>view{
    min-height: 150rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}
.friend-item>view>view:first-of-type{
    font-size: 28rpx;
}
.friend-item>view>view:last-of-type>text:first-of-type{
    color:#f33497;
    font-size: 24rpx;
}
.friend-item>view>view:last-of-type>text:nth-of-type(2){
    color:#f33497;
    font-size: 28rpx;
    padding-right: 10rpx;
}
.friend-item>view>view:last-of-type>text:nth-of-type(3){
    color:#999;
    font-size: 24rpx;
    text-decoration: line-through;
}
.friend-activity{
    display: flex;
    align-items: center;
    flex-direction: column;
    background: #fff;
    margin-bottom: 20rpx;
}
.friend-activity-image{
    display: flex;
    justify-content: space-around;
    align-items: center;
    height: 144rpx;
    width: 100%;
}
.friend-activity-image{
    display: flex;
    justify-content: space-around;
    align-items: center;
    height: 144rpx;
}
.friend-activity-image>view{
    height: 88rpx;
    width: 88rpx;
    font-size: 0;
    position: relative;
}
.friend-activity-image>view>image{
    height: 88rpx;
    width: 88rpx;
    border-radius: 50%; 
}
.friend-activity-image>view:first-of-type>image{
    border: 1px solid #f33497;
}
.friend-activity-image__active{
    position: absolute;
    bottom: -8rpx;
    left: 9rpx;
    width: 70rpx;
	height: 24rpx;
	background-color: #f33497;
	border-radius: 10rpx;
    font-size: 20rpx;
    color:#fff;
    text-align: center;
    line-height: 24rpx;
}
.friend-activity>view:nth-of-type(2){
    padding-top:20rpx; 
    font-size: 48rpx;   
}
.friend-activity>view:nth-of-type(3){
    padding-top:20rpx;
    font-size: 26rpx;
    color:#999;
}
.friend-activity>view:nth-of-type(3)>text{
    font-size: 36rpx;
    color:#fff;
    width: 90rpx;
	height: 54rpx;
	background-color: #999999;
	border-radius: 4rpx;
    display: inline-block;
    text-align: center;
    line-height: 54rpx;
    margin-left: 10rpx;
    margin-right: 5rpx;
}
.friend-activity>view:nth-of-type(4){
    width: 650rpx;
	height: 120rpx;
    text-align: center;
    line-height: 120rpx;
	background-color: #f33497;
	border-radius: 12rpx;
    font-size: 48rpx;
    color: #fff;
    margin: 60rpx auto 30rpx auto;
}
