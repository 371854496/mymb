/* pages/order/detail/index.wxss */
.order-detail{
    background: #f5f5f5;
    font-size: 26rpx;
    color:#999;
}
.order-detail-header{
    background: #f33497; 
    width: 100%;
	height: 225rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.order-detail-header>view{
    padding-left: 40rpx;
    font-size: 32rpx;
    color:#fff;
}
.order-detail-header>image{
    margin-right: 40rpx;
    width: 140rpx;
    height:110rpx;
}
/*订单商品信息  */
.order-detail-info{
    background: #fff;
    padding-left: 30rpx;
    margin-bottom: 20rpx;
}
.order-item{
    padding: 30rpx 0;
    border-bottom: 2rpx solid #f0f0f0;
    position: relative;
    display: flex;
    align-items: center;
}
.order-item-image{
    width: 160rpx;
    height: 160rpx;
    border-radius: 10rpx;
    margin-right: 30rpx;
}
.order-item-content{
    min-height: 160rpx;
    width: 400rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}
.order-item-content>view:first-of-type{
    font-size: 28rpx;
    color:#222;
}
.order-item-content>view:last-of-type{
    font-size: 32rpx;
    color:#f33497;
}
.order-item-right{
    position: absolute;
    top: 30rpx;
    right: 30rpx;
    color:#999;
    font-size: 30rpx;
}
/*订单其他信息  */
.order-detail-other{
    background: #fff;
    padding:30rpx; 
}
.order-detail-other>view+view{
    margin-top: 30rpx;
}
.order-detail-other>view>text:last-of-type{
    color:#222;
}
.order-detail-price{
    background: #fff;
}
.order-detail-price>view{
    margin-left: 30rpx;
    line-height: 90rpx;
    border-top:1px solid #f0f0f0;
    color:#f33497;
}
