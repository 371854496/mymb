/* components/dialog/component.wxss */
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 540rpx;
  height: 572rpx;
  position: fixed;
  top: calc(50% - 284rpx);
  left: calc(50% - 270rpx);
  z-index: 9999;
  background: #fff;
  border-radius: 10rpx;
}
.modal-dialog-cancal{
    position: absolute;
    top: 24rpx;
    right: 24rpx;
}
.modal-dialog>view{
    text-align: center;
    height: 100%;
    display: flex;
    flex-flow: column;
    justify-content: space-around;
}
.modal-title{
    font-size: 36rpx;
    color: #333;
    margin-bottom: 32rpx;
}
.modal-content{
    color:#666;
    font-size: 24rpx;
    margin-bottom: 32rpx;
}
.modal-active{
    color:#fd6963;
    font-size:40rpx;
}