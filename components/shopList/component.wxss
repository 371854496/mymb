/* components/shopList/shopList.wxss */
.shoplist{
  padding: 24rpx;
  display: flex;
  flex-wrap:wrap;
  justify-content:space-between;
}
.shoplist>view{
  background: #fff;
  height: 510rpx;
  width: 340rpx;
  position: relative;
  border-radius:8rpx;
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.04); 
  margin-bottom: 20rpx; 
  font-size: 0;
}
.shoplist>view>.shop-content{
    /* position: absolute;
    bottom: 20rpx;
    left: 18rpx; */
    display: flex;
    flex-direction: column;
    justify-content: center;
    height: 130rpx;
    padding-left:20rpx;
}
.shoplist>view>view>.shop-title{
    font-size: 28rpx;
    line-height: 28rpx;
    color: #222;
    text-overflow:ellipsis; 
    white-space:nowrap; 
    overflow:hidden;
}
