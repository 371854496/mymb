.shop-price{
    padding-top:20rpx; 
    height:32rpx;
    font-size:0;
}
.shop-price>view:first-of-type{
    display: inline-block;
    font-size: 24rpx;
    line-height: 24rpx;
    color:#f33497;
    padding-right: 10rpx;
}
.shop-price>view:first-of-type>text{
    font-size: 32rpx;
    color:#f33497;
    line-height: 32rpx;
}
.shop-price>view:last-of-type{
    display: inline-block;
    font-size: 20rpx;
    line-height: 20rpx;
    color:#999;
    text-decoration: line-through;
}
.shop-price>view:last-of-type>text{
    font-size: 20rpx;
    color:#999;
    line-height: 20rpx;
}